@{
    ViewBag.Title = "Pontos";
}

@section head{
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css">

    <style>
        /* Garantir que a tabela tenha altura fixa com scroll */
        .dataTables_scrollBody {
            border: 1px solid #dee2e6;
        }

        /* Ajustar informações no final */
        #placarTable_info {
            padding-top: 10px;
        }

        #placarTable_paginate {
            padding-top: 10px;
        }
    </style>
}

<div class="p-3">
    <h4 class="text-center mb-3">Consultar Pontos por Motorista</h4>

    <!-- Modal de Filtros -->
    <div class="modal fade" id="filtroModal" tabindex="-1" aria-labelledby="filtroModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filtroModalLabel">Filtros da Consulta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Filtros -->
                    <div class="filter-section">
                        <div class="row">
                            <!-- Data Inicial -->
                            <div class="col-md-5">
                                <div class="d-flex gap-1">
                                    <label for="field-periodoData" class="form-label">Período:</label>
                                    <span class="required">*</span>
                                </div>
                                <div class="input-group">
                                    <input class="form-control" id="field-periodoData" type="text" required placeholder="Escolha um período...">
                                    <span class="input-group-text bg-BotoesNav-custom">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <!-- Motorista -->
                            <div class="col-md-5">
                                <div class="filter-group">
                                    <label for="motorista">
                                        Motorista
                                        <span class="required">*</span>
                                    </label>
                                    <select id="motorista" class="form-control selectpicker" data-live-search="true" data-size="8" data-show-deselect="true">
                                    </select>
                                </div>
                            </div>

                            <!-- RFID -->
                            <div class="col-md-4">
                                <div class="filter-group">
                                    <label for="rfid">
                                        RFID
                                        <span class="required">*</span>
                                    </label>
                                    <select id="rfid" class="form-control selectpicker" data-live-search="true" data-size="8" data-show-deselect="true">
                                    </select>
                                </div>
                            </div>

                            <!-- Matrícula -->
                            <div class="col-md-3">
                                <div class="filter-group">
                                    <label for="matricula">Matrícula</label>
                                    <input type="text" id="matricula" class="form-control" readonly placeholder="-">
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <!-- Empresa (Opcional) -->
                            <div class="col-md-5">
                                <div class="filter-group">
                                    <label for="empresa">Empresa</label>
                                    <select id="empresa" class="form-control selectpicker" data-live-search="true" data-size="8" data-show-deselect="true">
                                    </select>
                                </div>
                            </div>

                            <!-- Placa (Opcional) -->
                            <div class="col-md-4">
                                <div class="filter-group">
                                    <label for="placa">Placa</label>
                                    <select id="placa" class="form-control selectpicker" data-live-search="true" data-size="8" data-show-deselect="true">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnLimpar" type="button" class="btn btn-secondary"><i class="icon ion-md-refresh"></i> Limpar Filtros</button>
                    <button id="btnBuscar" type="button" class="btn btn-primary showSpinnerCarregando"><i class="icon ion-md-search"></i> Aplicar Filtros</button>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable -->
    <div class="table-responsive small bg-rounded-custom rounded m-1 p-1 pb-2">
        <table id="placarTable" class="table table-hover responsive configurable-table table-sm bg-CorTabela-custom" style="width: 100%;" cellspacing="0">
            <thead class="bg-CorTabela-custom bg-DashBoard-custom " style="font-weight: bold">
                <tr>
                    <th>Empresa</th>
                    <th>Placa</th>
                    <th>Emissão</th>
                    <th>Localização</th>
                    <th>Motorista</th>
                    <th>Voltagem</th>
                    <th>Situação</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Velocidade (km/h)</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <span class="helper-text">* Pontos buscados em <span id="dataDadosAtualizados"></span></span>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/home-deps")

    <script>
        var urlConsultaPlacaSettings = {
            GetConsultaPlacaData: '@Url.Action("GetConsultaPlacaData", "Home")',
            GetMotoristaAutocomplete: '@Url.Action("GetConsultaPlacaMotoristaAutocomplete", "Home")',
            GetRFIDAutocomplete: '@Url.Action("GetConsultaPlacaRFIDAutocomplete", "Home")',
            GetPlacasAutocomplete: '@Url.Action("GetConsultaPlacaPlacasAutocomplete", "Home")',
            GetEmpresasAutocomplete: '@Url.Action("GetConsultaPlacaEmpresas", "Home")',
            ExportConsultaPlacaXml: '@Url.Action("ExportConsultaPlacaExcel", "Home")',
        }
    </script>
    <script src="~/Scripts/View/Index/index.js"></script>
}

