@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Bem-vindo ao Sistema de Pontos</h2>
            <p class="lead">Selecione uma das opções abaixo para acessar os módulos do sistema:</p>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Card Pontos -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-map-marker-alt fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-center">Consulta de Pontos</h5>
                    <p class="card-text flex-grow-1">
                        Consulte pontos por motorista, visualize localizações, velocidades e informações detalhadas sobre as rotas.
                    </p>
                    <a href="@Url.Action("Index", "Pontos")" class="btn btn-primary btn-block mt-auto">
                        <i class="fas fa-search"></i> Acessar Consulta
                    </a>
                </div>
            </div>
        </div>

        <!-- Card EmpDiv -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-building fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title text-center">Empresas e Divisões</h5>
                    <p class="card-text flex-grow-1">
                        Gerencie empresas e divisões do sistema, cadastre e edite informações organizacionais.
                    </p>
                    <a href="@Url.Action("Index", "EmpDiv")" class="btn btn-success btn-block mt-auto">
                        <i class="fas fa-list"></i> Acessar Cadastro
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Placeholder para futura funcionalidade -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm border-secondary">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-chart-line fa-3x text-secondary"></i>
                    </div>
                    <h5 class="card-title text-center text-secondary">Relatórios</h5>
                    <p class="card-text flex-grow-1">
                        Visualize relatórios e estatísticas sobre pontos, motoristas e veículos.
                    </p>
                    <button class="btn btn-secondary btn-block mt-auto" disabled>
                        <i class="fas fa-clock"></i> Em Breve
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de informações adicionais -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading"><i class="fas fa-info-circle"></i> Informações do Sistema</h5>
                <hr>
                <p class="mb-0">
                    Sistema de gerenciamento de pontos e rastreamento de veículos. 
                    Para suporte técnico, entre em contato com a equipe de TI.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border-radius: 10px;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }

    .card-body {
        padding: 2rem;
    }

    .btn-block {
        display: block;
        width: 100%;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }
</style>

